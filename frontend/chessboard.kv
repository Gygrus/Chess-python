
<Cell>:
    size_hint: [None, None]
    size: [50, 50]

    Image:
        size_hint_y: None
        size_hint_x: None
        size: 40, 40
        center: self.parent.center
        source: self.parent.img_source


<GameLayout>:
    orientation: 'vertical'
    id: chessboard_gui
    chessboard_object: chessboard

    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'top'
        id: anchor2

        size_hint: [1, 0.2]

        BoxLayout:
            orientation: 'horizontal'
            size_hint: None, self.size_hint_y
            size: self.minimum_size
            spacing: 350

            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: "Biały"

                Label:
                    text: "{minutes}:{seconds}".format(minutes = chessboard.white_time_as_str_minutes, seconds = chessboard.white_time_as_str_seconds)

            BoxLayout:
                orientation: 'vertical'

                Label:
                    text: "Biały"

                Label:
                    text: "{minutes}:{seconds}".format(minutes = chessboard.black_time_as_str_minutes , seconds = chessboard.black_time_as_str_seconds)




    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        id: game_anchor


        ChessBoard:
            cols: 8
            rows: 8
            size_hint: None, None
            size: self.minimum_size
            pos: (self.parent.width)/2, (self.parent.height)/2
            id: chessboard

    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        size_hint: [1, 0.2]


        Button:
            text: 'Reset chessboard'
            size_hint: [None, None]
            size: [300, 100]
            on_release: chessboard.reset_chessboard()

